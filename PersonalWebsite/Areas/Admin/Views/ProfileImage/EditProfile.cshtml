@model EditProfileViewModel
@{
    ViewData["Title"] = "ویرایش پروفایل";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h6 class="card-title">ویرایش پروفایل</h6>
                </div>
                <form asp-controller="ProfileImage" asp-action="EditProfile" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProfileId" />
                    <input type="hidden" asp-for="ProfileImage" />
                    <div class="form-group">
                        <label for="exampleInputText1">نام</label>
                        <input type="text" class="form-control" asp-for="FullName" placeholder="نام" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label for="profile">
                            <img src="/image/@Model.ProfileImage" style="width:120px;height:120px;border-radius:50%;cursor:pointer" class="image" />
                        </label>
                        <input type="file" asp-for="File" class="profileInput" id="profile" style="display:none" />
                    </div>
                    <button class="btn btn-primary" type="submit">ویرایش</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="~/js/Admin.js"></script>
}


