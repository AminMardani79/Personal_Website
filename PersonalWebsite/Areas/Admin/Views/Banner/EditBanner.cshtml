@model EditBannerImageViewModel
@{
    ViewData["Title"] = "ویرایش بنر";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h6 class="card-title">ویرایش بنر</h6>
                </div>
                <form asp-controller="Banner" asp-action="EditBanner" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="BannerId" />
                    <input type="hidden" asp-for="BannerImage" />
                    <div class="form-group">
                        <label for="exampleInputText1">نام</label>
                        <input type="text" class="form-control" asp-for="FullName" placeholder="نام" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputText1">عنوان</label>
                        <input type="text" class="form-control" asp-for="BannerTitle" placeholder="عنوان" />
                        <span asp-validation-for="BannerTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputText1">لینک رزومه</label>
                        <input type="text" class="form-control" asp-for="ResumeLink" placeholder="لینک رزومه" />
                        <span asp-validation-for="ResumeLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputText1">توضیحات</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label for="banner">
                            <img src="/image/@Model.BannerImage" style="width:666px;height:666px;border-radius:50%;cursor:pointer" class="bannerImage" />
                        </label>
                        <input type="file" asp-for="File" class="bannerInput" id="banner" style="display:none" />
                    </div>
                    <button class="btn btn-primary" type="submit">ویرایش</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="~/js/Admin.js"></script>
}


