@using Application.Interface
@inject IContactDetailService contactDetailService;
@inject IProfileService profileService;
@{
    var contactDetail = contactDetailService.GetContactDetail().Result;
    var profile = profileService.GetProfile().Result;
}
<header class="header-left">
    <div class="scroll-bar">
        <div class="hl-top">
            <div class="hl-logo">
                <div class="img" style="width:120px;height:120px">
                    <img src="/image/@profile.ProfileImage" title="" alt="" style="width:120px;height:120px">
                </div>
                <h5 class="primary-font">@profile.FullName</h5>
            </div>
        </div>
        <ul class="nav nav-menu" id="pp-menu">
            <li class="active" data-menuanchor="home">
                <a class="nav-link" href="#home">
                    <i class="ti-home"></i>
                    <span>خانه</span>
                </a>
            </li>
            <li data-menuanchor="about">
                <a class="nav-link" href="#about">
                    <i class="ti-id-badge"></i>
                    <span>درباره من</span>
                </a>
            </li>
            <li data-menuanchor="services">
                <a class="nav-link" href="#services">
                    <i class="ti-panel"></i>
                    <span>خدمات</span>
                </a>
            </li>
            <li data-menuanchor="work">
                <a class="nav-link" href="#work">
                    <i class="ti-bookmark-alt"></i>
                    <span>نمونه‌کارها</span>
                </a>
            </li>
            <li data-menuanchor="contactus">
                <a class="nav-link" href="#contactus">
                    <i class="ti-map-alt"></i>
                    <span>تماس با من</span>
                </a>
            </li>
            <li>
                <a class="nav-link">
                    <audio id="audioPlayer">
                        <source src="~/one_man_s_dream.mp3" type="audio/mp3">
                        Your browser does not support the audio element.
                    </audio>
                    <i onclick="startAudio()" class="ti-music-alt" style="cursor:pointer"></i>
                </a>
            </li>
        </ul>
    </div>
    <div class="nav justify-content-center social-icons">
        <a href="https://instagram.com/@contactDetail.Instagram" title="@contactDetail.Instagram" target="_blank"><i class="fab fa-instagram"></i></a>
        <a href="https://www.linkedin.com/in/@contactDetail.LinkdIn/" title="amin-mardani" target="_blank"><i class="fab fa-linkedin-in"></i></a>
        <a href="https://t.me/@contactDetail.Telegram" title="@contactDetail.Telegram" target="_blank"><i class="fab fa-telegram"></i></a>
    </div>
</header>