@model IEnumerable<ProjectViewModel>
@foreach (var item in Model)
{
    var categories = item.Categories;
    var filters = new string[categories.Count];
    int index = 0;
    foreach (var category in categories)
    {
        filters[index] = category.CategoryFilter;
        index++;
    }
    var str = String.Join(" ",filters);

    <div class="grid-item @str">
        <div class="portfolio-box-01">
            <div class="portfolio-info">
                <h5 class="white-color primary-font">
                    @if(item.DownloadLink != null)
                    {
                        <a href="@item.DownloadLink" target="_blank">@item.ProjectTitle</a>
                    }
                    else
                    {
                        @item.ProjectTitle
                    }
                </h5>
                <span>@item.ProjectSubTitle</span>
                <p>
                    @item.ProjectDescription
                </p>
                <div class="flex justify-content-center py-2">
                    <a href="">
                        <i class="fas fa-cloud-download-alt"></i>
                    </a>
                </div>
            </div>
            <div class="portfolio-img" style="min-height:250px">
                <img src="/image/@item.ProjectImage" title="" alt="" style="min-height:250px">
                <div class="portfolio-icon">
                    <a href="/image/@item.ProjectImage" class="gallery-link">
                        <span class="ti-plus"></span>
                    </a>
                </div>
            </div>
        </div>
    </div> <!-- grid item -->
}